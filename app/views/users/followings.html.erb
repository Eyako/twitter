
<div class="row">
  <aside class="col-md-4">
    <div class="row">
      <div class="col-md-12">
        <section class="user_info">
          <h1>
            <%= gravatar_for @user %>
            <%= @user.name %>
          </h1>
        </section>
        </div>
        <div class="col-md-12">
          <div class="panel panel-info">
            <div class="panel-heading">
              Introduction
            </div>
            <div class="panel-body">
              <%= @user.intro %>
            </div>  
        </div>
        <div class="panel panel-info">
            <div class="panel-heading">
              Email
            </div>
            <div class="panel-body">
              <%= @user.email %>
            </div>
        </div>
      </div>
    </div>
  </aside>
  <div class="col-md-4">
    <h3>Followings (<%= @user.following_users.count %>)</h3>
    <% if @users.any? %>
      <ol class="microposts">
        <%= render @users %>
      </ol>
    <% end %>
  </div>
</div>